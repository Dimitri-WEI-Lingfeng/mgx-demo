{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MGX API (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "mgx_api.main:app",
        "--host", "0.0.0.0",
        "--port", "8866"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal",
      "env": {
        "WORKSPACES_ROOT": "${workspaceFolder}/workspaces"
      }
    },
    {
      "name": "MGX API (main.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/mgx_api/main.py",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "envFile": "${workspaceFolder}/.env",
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal"
    }
  ]
}
